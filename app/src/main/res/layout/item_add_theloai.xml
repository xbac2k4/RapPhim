<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM THỂ LOẠI"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#8692F7"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputIMGTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            app:hintTextColor="#000000"
            android:hint="Nhập URL của ảnh"
            app:errorTextColor="#FF0000"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#80000000"
            app:startIconDrawable="@drawable/iconimg">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_URL_TheLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:id="@+id/ed_URL_TheLoai"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:hint="Nhập URL của ảnh"-->
<!--            android:inputType="text"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:textSize="23sp" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            app:hintTextColor="#000000"
            android:hint="Nhập thể loại"
            app:errorTextColor="#FF0000"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#80000000"
            app:startIconDrawable="@drawable/theloai_icon">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_TenTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:id="@+id/ed_TenTL"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:hint="Nhập thể loại"-->
<!--            android:inputType="text"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:textSize="23sp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>