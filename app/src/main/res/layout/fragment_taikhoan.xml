<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.fragment_taikhoan">
    <LinearLayout
        android:id="@+id/Avatar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:background="@drawable/img_1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_marginTop="-40dp"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tvTenHienThi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avatar"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_below="@+id/imgAvatar"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/soDu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Avatar"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSoDu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Số dư:"
            android:textColor="#FF0000"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7A7A7A"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thongTinTK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soDu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvThongTinTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Thông tin Tài khoản"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7A7A7A"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/doiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thongTinTK"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:textColor="@color/black"
            android:text="Đổi Mật khẩu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7A7A7A"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doiMatKhau"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:textColor="@color/black"
            android:text="Đăng Xuất"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7A7A7A"/>
    </LinearLayout>

