<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvThemLC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Thêm Lịch Chiếu"
                android:textAlignment="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <!--            <TextView-->
            <!--                android:id="@+id/tvUpdatePhim"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Update"-->
            <!--                android:visibility="invisible"-->
            <!--                android:textAlignment="1"-->
            <!--                android:gravity="center"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textSize="20sp"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:layout_marginBottom="5dp"-->
            <!--                android:textColor="#000000"/>-->
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Tên Phim"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spnTenPhim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Phòng"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spnPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/txtNgayChieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:focusable="false"
            android:hint="Ngày chiếu"
            android:inputType="none"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Khung giờ"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spnKhungGio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Hủy"
                android:textColor="#8692F7"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Thêm"
                android:textColor="#8692F7"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>