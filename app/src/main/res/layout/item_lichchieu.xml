<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="43dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvMaLichChieu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã: 1"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtTenPhim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên phim"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng: 1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày chiếu: "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/txtNgayChieu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023/11/20"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/giaVe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khung giờ: "
                            android:textStyle="italic"
                            android:textColor="#FF0000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtKhungGio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13h - 15h"
                            android:textStyle="italic"
                            android:textColor="#FF0000"
                            android:textSize="12sp"/>
                    </LinearLayout>
<!--                    <LinearLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="horizontal">-->
<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Khởi chiếu: "-->
<!--                            android:textColor="#1FAEFF"-->
<!--                            android:textSize="12sp"/>-->
<!--                    </LinearLayout>-->


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fa_edit" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carbon_delete" />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>