<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dangnhap"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:background="#fff">a

  <ImageView
      android:layout_marginTop="30dp"
      android:layout_width="150dp"
      android:layout_height="110dp"
      android:src="@drawable/mhc2"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Welcome Back,"
      android:textSize="32dp"
      android:textStyle="bold"
      android:textColor="@color/black"/>
  <TextView
      android:id="@+id/tv_mhc2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18dp"
      android:text="It's convenient, affordable, and fast!"
      android:textColor="@color/black"/>

  <EditText
      android:id="@+id/edt_email"
      android:layout_width="match_parent"
      android:layout_marginTop="30dp"
      android:layout_height="60dp"
      android:hint="E-Mail"
      android:inputType="text"
      android:textColorHint="#2E2E2E"
      android:background="@drawable/border"
      android:padding="15dp"
      android:drawableLeft="@drawable/ic_baseline_email_24"
      android:drawablePadding="15dp"/>

  <EditText
      android:id="@+id/edt_pass"
      android:layout_width="match_parent"
      android:layout_marginTop="15dp"
      android:layout_height="60dp"
      android:hint="Password"
      android:textColorHint="#2E2E2E"
      android:background="@drawable/border"
      android:padding="15dp"
      android:drawableLeft="@drawable/ic_baseline_https_24"
      android:drawablePadding="15dp"
      android:inputType="textPassword" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">
      <CheckBox
          android:id="@+id/chk_nho_mat_khau"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:text="Nhớ mật khẩu"/>
  </LinearLayout>

  <Button
      android:id="@+id/btn_login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="#6672FF"
      android:background="@drawable/border"
      android:text="LOGIN"
      android:textColor="#fff"
      android:layout_marginTop="20dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20dp"
      android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Don't have an Account?"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text=" Signup"
        android:textColor="#3391DC"
        android:textStyle="bold"/>
  </LinearLayout>

  </LinearLayout>